.container {
  margin: 20rpx auto;
}
.head {
  font-size: 16px;
  color: #ffffff;
  background-color: #ff6e37;
  padding: 5rpx 10rpx;
}
.cp {
  margin-bottom: 20rpx;
}
.cp {
  font-size: 16px;
  color: #666;
}
.detail {
  background-color: #f1f1f1;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #999;
}
.message {
  background-color: #f1f1f1;
}
.message-item {
  padding: 20rpx;
  color: #666;
  font-size: 14px;
  border-bottom: 1px solid #999;
  display: flex;
  align-items: center;
}
.message-item image {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
}