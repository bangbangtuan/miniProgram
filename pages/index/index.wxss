.daka {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head {
  margin-bottom: 10rpx;
  font-size: 22px;
  font-weight: 700;
  color: #6c6c6c;
}

.daka textarea {
  border: 2rpx solid #e7e7e7;
  border-radius: 5rpx;
  padding: 20rpx;
  font-size: 16px;
}

.daka button {
  margin: 20rpx auto;
  width: 50%;
  background-color: #ff6e37;
  color: #fff;
}

.posts {
  margin: 50rpx 60rpx 0;
  color: #666;
  font-size: 16px;
}

.post {
  box-shadow: 0rpx 6rpx 10rpx 5rpx #e9e8e8;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}

.head-container {
  display: flex;
  justify-content: space-between;
}

.author-date-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author-date-container image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
  border: 1rpx solid #e1e1e1;
}

.auto-date {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 16px;
}

.auto-date .date {
  font-size: 13px;
}

.comment-content {
  font-size: 14px;
  margin: 10rpx;
}

.count text {
  font-size: 14px;
}

.comment-like {
  margin-left: 395rpx;
}

.comment-like image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 8px;
  vertical-align: middle;
}

.comment-like text {
  font-size: 14px;
  vertical-align: middle;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

checkbox .wx-checkbox-input {
  width: 18px;
  height: 16px;
  border: 0;
  background: none;
}

checkbox .wx-checkbox-input:before {
  display: none;
}

.daka-area {
  position: relative;
}

.text-count {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  color: #999;
  font-size: 14px;
}
.classify-box {
  /* display: flex; */
  font-size: 14px;
  margin: 20rpx 0;
  color: #666;
  width: 100%;
}
.classify{
  width: 600rpx;
  display: flex;
  flex-wrap: wrap;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
radio{
  margin-right: 15rpx;
}
radio .wx-radio-input {
  display: none;
}

.classify .radioActive {
  border: 1rpx solid #ff6e37;
  background-color: rgb(218, 214, 214);
  border-radius: 10rpx;
}

.radio-group .radio {
  padding: 0 10rpx;
  display:block;
}
 .divider{
  height: 1rpx;
  width: 96%;
  border-top: 4rpx solid #999;
  margin: 20rpx 0;
 }
 .comment-desc{
   font-size:14px;
 }
 .more{
   font-size:13px;
  margin-top:10rpx;
 }
 .more_txt{
   color:#eabc48;
 }
 .share{
   line-height:1;
   background:#fff;
   margin-top:8rpx;
 }
 .share::after{
   border:none;
 }
 .tag {
   color: #ff6e37;
 }

