/* pages/post/post.wxss */
.daka .daka-area{
  position: relative;
  background-color: #f7f8fa;
  border-radius: 20rpx;
  margin:20rpx 20rpx 30rpx;
}

.daka textarea {
  height:200rpx;
  padding:35rpx 25rpx;
  font-size: 16px;
}

.daka button {
  position: fixed;
  bottom:40rpx;
  left:50%;
  transform: translateX(-50%);
  width:94%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4f4fe0;
  color: #fff;
}
checkbox .wx-checkbox-input {
  width: 18px;
  height: 16px;
  border: 0;
  background: none;
}

checkbox .wx-checkbox-input:before {
  display: none;
}
textarea{width:auto;}


.text-count {
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  color: #999;
  font-size: 14px;
}
.classify-box {
  font-size: 14px;
  padding: 0rpx 20rpx 20rpx 30rpx;
  color: #0e1034;
  font-weight: 400;
  width: 100%;
}
.classify{
  display: flex;
  flex-wrap: wrap;
  margin-top:32rpx;
}

 
radio .wx-radio-input {
  display: none;
}



.classify .radio {
  background:#fff;
  padding:10rpx 30rpx;
  text-align: center;
  color:#000;
  box-shadow: 0rpx 0rpx 6rpx 3rpx #e9e8e8;
  border-radius: 10rpx;
  display:block;
  margin: 0 30rpx 20rpx 0;
}
.classify .radioActive {
  background-color: #4f4fe0;
  color:#fff;
}
 .divider{
  height: 1rpx;
  width: 96%;
  border-top: 4rpx solid #999;
  margin: 20rpx 0;
 }
 .comment-desc{
   font-size:14px;
 }
 .more{
   font-size:13px;
  margin-top:10rpx;
 }
 .more_txt{
   color:#eabc48;
 }
 .share{
   line-height:1;
   background:#fff;
   margin-top:8rpx;
 }
 .share::after{
   border:none;
 }
