.container {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}
.con-header {
  margin: 20rpx 0 30rpx;
  font-size: 16px;
  border-left: 5rpx solid #ff6e37;
  padding-left: 10rpx;
}
.task-pannel {
  box-shadow: 0px 6px 5px #e9e8e8;
  padding: 30rpx;
  font-size: 15px;
}
.task-pannel view {
  margin-top: 20rpx;
}
.task-pannel button {
  width: 60%;
  background-color: rgba(0, 140, 255, 0.774);
  color: #fff;
  border-radius: 40rpx;
  font-size: 14px;
}
