.container {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

.con-header {
  margin: 20rpx 0 30rpx;
  font-size: 16px;
  border-left: 5rpx solid #ff6e37;
  padding-left: 10rpx;
}

.relative-box {
  position: relative;
}

.relative-box .weui-media-box__hd_in-appmsg {
  width: 150rpx;
  height: 200rpx;
}

.relative-box .weui-media-box__bd_in-appmsg {
  margin-bottom: 40rpx;
}

.btn-detail {
  background-color: #48ce24;
  color: #fff;
  border: none;
  padding: 5rpx 25rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 14px;
  position: absolute;
  right: 0;
  bottom: 15rpx;
}
.team-members {
  display: flex;
  margin-top: 10rpx;
}
.team-members image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.project-cont-box {
  display: flex;
}