.project-background {
  height: 100%;
  background-color: #4e4edf;
}

.project-wrapper {
  padding-top: 50rpx;
  margin-top: 40rpx;
  height: 100%;
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-content: flex-start;
}

.project-item {
  display: flex;
  width: 710rpx;
  height: 240rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 4rpx #bbb;
  box-shadow: 0rpx -6rpx 10rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.project-pic {
  width: 180rpx;
  height: 180rpx;
  background-image: linear-gradient(25deg,
    #4f4fe0 100%);
  border-radius: 10rpx;
  margin: 30rpx;
  flex-shrink: 0;
}

.project-content {
  position: relative;
  flex: 1;
  margin: 30rpx 30rpx 30rpx 0rpx;
  font-size: 0rpx;
}

.project-title {
  height: 28rpx;
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 28rpx;
  letter-spacing: 0rpx;
  color: #000000;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 440rpx;
}

.project-technology {
  margin-top: 15rpx;
  height: 25rpx;
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 25rpx;
  letter-spacing: 0rpx;
  color: #666666;
}

.project-profile {
  padding-top: 10rpx;
  height: 25rpx;
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 25rpx;
  letter-spacing: 0rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 440rpx;
}

.team-members {
  display: flex;
  align-items: center;
  margin-top: 23rpx;
  justify-content: space-between;
}

.team-wrapper {
  flex: 1;
  align-items: center;
  display: flex;

}

.team-wrapper :nth-child(2) {
  position: relative;
  left: -15rpx;
}

.team-wrapper :nth-child(3) {
  position: relative;
  left: -30rpx;
}

.team-wrapper :nth-child(4) {
  position: relative;
  left: -45rpx;
}

.team-wrapper :nth-child(5) {
  position: relative;
  left: -45rpx;
}

image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: inline-block;
}

.total {
  height: 20rpx;
  font-family: MicrosoftYaHei;
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 20rpx;
  letter-spacing: 0rpx;
  color: #666666;
  display: flex;
  margin-left: 7rpx;
}


.btn-detail {
  margin-top: 19rpx;

  text-align: center;
  height: 50rpx;
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 50rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
  width: 110rpx;
  background-color: #4f4fe0;
  border-radius: 25rpx;
}
