.content-wrapper {
	display: flex;
	width: 750rpx;
	background-color: #ffffff;
	box-shadow: 0rpx -6rpx 10rpx 0rpx
		rgba(0, 0, 0, 0.1);
    border-radius: 30rpx;
	padding-top: 50rpx;
	height: 100%;
	flex-direction: column;
	padding-bottom: 20rpx;
}

.plan {
	display: flex;
    width: 710rpx;
	height: 140rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
	box-shadow: 4rpx 4rpx 4rpx #bbb;
	margin-left: 20rpx;
	margin-bottom: 20rpx;
}

.left {
	display: inline-block;
    width: 12rpx;
	height: 140rpx;
	background-color: #4f4fe0;
	border-radius: 10rpx 0rpx 0rpx 10rpx;
}

.title-wrapper {
	flex: 1;
	display: table;
	width: 480rpx;
	height: 140rpx;
	font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #000000;
	padding-left: 38rpx;
	padding-right: 38rpx;
}

.title {
	display: table-cell;
	vertical-align: middle;
}

.join {
	width: 150rpx;
	height: 140rpx;
	background-image: linear-gradient(25deg,
		#4f4fe0 100%);
	border-radius: 0rpx 10rpx 10rpx 0rpx;
	background-color: #4f4fe0;
	position: relative;
}

.button-text {
	width: 48rpx;
	font-family: MicrosoftYaHei;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
	display: table-cell;
	vertical-align: middle;
	left: 50%;
	transform: translate(-50%, -50%);
	top:50%;
	position: absolute;
	line-height: 35rpx;
}


.detail-wrapper {
	display: flex;
	justify-content: center;
	height: 100%;
	background-color: #ffffff;
	box-shadow: 0rpx -6rpx 10rpx 0rpx
		rgba(0, 0, 0, 0.1);
	border-radius: 30rpx;
}


.submit {
	width: 710rpx;
	height: 80rpx;
	background-color: #4c4fde;
	border-radius: 20rpx;
	font-family: MicrosoftYaHei;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 70rpx;
	letter-spacing: 0rpx;
	color: #ffffff;
	text-align: center;
	line-height: 80rpx;
}

.scroll {
	height: 150%;
}
