.font-wrapper, .backend-wrapper {
	display: flex;
	justify-content: center;
	width: 100rpx;
	margin-right: 30rpx;
	flex-wrap: wrap;
}

.font-sign, .backend-sign {
	width: 100rpx;
	height: 100rpx;
