.swiper {
	height: 120%;
}

.content-wrapper {
	display: flex;
	width: 750rpx;
    justify-content: center;
	background-color: #ffffff;
	box-shadow: 0rpx -6rpx 10rpx 0rpx
		rgba(0, 0, 0, 0.1);
    border-radius: 30rpx;
	padding-top: 50rpx;
	height: 100%;
	flex-wrap: wrap;
}

.plan {
	display: flex;
    width: 710rpx;
	height: 140rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
}

.left {
	display: inline-block;
    width: 12rpx;
	height: 140rpx;
	background-color: #4f4fe0;
	border-radius: 10rpx 0rpx 0rpx 10rpx;
}

.title-wrapper {
	flex: 1;
	display: inline-block;
}

.title {
	width: 480rpx;
	height: 62rpx;
	font-family: MicrosoftYaHei;
	font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 70rpx;
	letter-spacing: 0rpx;
	color: #000000;
}

.join {
	width: 150rpx;
	height: 140rpx;
	background-image: linear-gradient(25deg,
		#4f4fe0 100%);
	border-radius: 0rpx 10rpx 10rpx 0rpx;
	font-family: MicrosoftYaHei;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 70rpx;
	letter-spacing: 0rpx;
	background-color: #4f4fe0;
}

.detail-wrapper {
	display: flex;
	justify-content: center;
	height: 100%;
	background-color: #ffffff;
	box-shadow: 0rpx -6rpx 10rpx 0rpx
