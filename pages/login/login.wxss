.box {
  display: flex;
  flex-direction: column;
  margin: 50rpx;
}
.header {
  font-size: 25px;
  font-weight: 500;
  color: #666;
  margin: 10rpx;
}
.form {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo {
  width: 350rpx;
  height: 120rpx;
  /* border: 1rpx solid #999; */
  color: #999;
  font-weight: 500;
  line-height: 120rpx;
  text-align: center;
  margin: 40rpx;
}
.input, .yanzhengma {
  border: 2rpx solid #ff6e37;
  border-radius: 10rpx;
  width: 500rpx;
  height: 80rpx;
  margin: 40rpx auto;
  font-size: 16px;
  padding-left: 20rpx;
}
form button {
  background-color: #ff6e37;
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  color: #f1f1f1;
  font-size: 18px;
  margin: 150rpx auto 10rpx;
}
.register {
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #999;
  margin: 10rpx;
}
.register navigator {
  color: #ff6e37;
}
.yanzhengma {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 80rpx;
  align-items: center;
}
.yanzhengma .code {
  font-style: italic;
  font-weight: bold;
  border: 0;
  letter-spacing: 3px;
  font-size: 18px;
  background-color: #ff6e37;
  color: #fff;
  height: 80rpx;
  width: 200rpx;
  padding-left: 50rpx;
}
.wechat {
  font-size: 14px;
  display: flex;
  flex-direction: row;
  font-weight: 400;
  color: #999;
  align-items: center;
  margin: 10rpx 0;
}
form button::after {
  border: none;
}
.wechat image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.forget-pwd {
  float: right;
  font-size: 13px;
  color: #999;
  border-bottom: 1px dashed #999;
  margin-right: 30rpx;
}