}



button {
  width: 710rpx;
  height: 80rpx;
  background-image: linear-gradient(90deg,
    #1f41ab 0%,
    #4c4fde 100%);
  border-radius: 20rpx;
  line-height:  80rpx;
  text-align: center;
}

.save {
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 80rpx;
  letter-spacing: 0rpx;
  color: #ffffff;
}
